<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_clinic_name"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/secondary"
        app:title="СМ-Клиника"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar_clinic_name">

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_light"
                android:textColor="@color/black"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:text="Адрес медицинского учреждения:" />

            <TextView
                android:id="@+id/clinic_address_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_bold"
                android:textColor="@color/black"
                android:textSize="24sp"
                tool:text="Москва, ул. Корнейчука, 28" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Наименование услуги:" />

            <TextView
                android:id="@+id/service_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_semibold"
                android:textColor="@color/black"
                android:textSize="24sp"
                tool:text="Лазерная коррекция зрения" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Должность:" />

            <TextView
                android:id="@+id/service_doctor_position_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                tool:text="Стоматолог" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="ФИО врача:" />

            <TextView
                android:id="@+id/service_doctor_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                tool:text="Иванов Иван Иванович" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Цена услуги:" />

            <TextView
                android:id="@+id/service_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                tool:text="1000р" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_light"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Описание:" />

            <TextView
                android:id="@+id/service_description_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/sfui_regular"
                android:textColor="@color/black"
                android:textSize="20sp"
                tool:text="Данная услуга..." />

            <ImageView
                android:id="@+id/service_iv"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="8dp"
                android:src="@drawable/service_green" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>